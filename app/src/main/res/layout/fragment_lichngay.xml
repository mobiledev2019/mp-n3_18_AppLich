<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:fillViewport="true"
    android:clickable="true"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="288dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpaper"
                    android:layout_width="match_parent"
                    android:layout_height="288dp">
                </android.support.v4.view.ViewPager>
                <TextView
                    android:textStyle="normal"
                    android:text="15"
                    android:textSize="96sp"
                    android:textColor="#2e318d"
                    android:id="@+id/txt_mung"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="normal"
                    android:text="thứ Sáu"
                    android:layout_below="@+id/txt_mung"
                    android:textSize="24sp"
                    android:textColor="#2e318d"
                    android:id="@+id/txt_thu"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:alpha="0.9"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:text="Hôm nay"
                    android:id="@+id/txt_ngay"
                    android:background="@drawable/background_textview"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:alpha="0.9"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_ngay"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:text="Tháng 2 năm 2019"
                    android:id="@+id/txt_thangnam"
                    android:background="@drawable/background_textview"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_themsukientrongngay"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/themsukientrongngay"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>