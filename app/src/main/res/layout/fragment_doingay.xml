<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/duonglich_doingay"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="#3a3a3a"
                        android:text="Dương lịch"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <DatePicker
                    android:id="@+id/datepicker_duonglich"
                    style="@style/MyDatePickerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></DatePicker>
                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/amlich_doingay"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="#3a3a3a"
                        android:text="Âm lịch"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <DatePicker
                    android:layout_marginBottom="96dp"
                    android:id="@+id/datepicker_amlich"
                    style="@style/MyDatePickerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></DatePicker>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_xemchitietngay"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Xem chi tiết ngày"
        android:layout_alignParentBottom="true"
        android:background="#e73d3d"
        android:layout_width="match_parent"
        android:layout_height="54dp" />
</RelativeLayout>